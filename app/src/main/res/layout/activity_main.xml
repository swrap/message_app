<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:layout_centerVertical="true"
    android:layout_centerHorizontal="true"
    android:orientation="vertical"
    tools:context=".activity.LoginActivity"
    android:baselineAligned="false"
    android:weightSum="1"
    android:gravity="center_vertical|center_horizontal">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:id="@+id/scrollView3"
        android:layout_gravity="center">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/status_closed"
                    android:id="@+id/status"
                    android:theme="@style/RoofDefaultFont"
                    android:layout_gravity="center"
                    android:textSize="28dp" />

            </LinearLayout>

            <Switch
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/switch_mobile_data"
                android:id="@+id/switch_mobile_data"
                android:checked="false"
                android:enabled="false"
                android:layout_gravity="center_horizontal"
                android:textSize="20dp"
                android:textAppearance="?android:attr/textAppearanceMedium" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:id="@+id/textView3"
                android:layout_gravity="center_horizontal"
                android:text="@string/text_info_display"
                android:textColorHighlight="@android:color/holo_orange_light"
                android:autoLink="web"
                android:gravity="center_horizontal"
                android:textSize="@dimen/roofmessage_main_size" />

            <Button
                android:text="Close Connection/Logout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/logoutBtn" />

        </LinearLayout>
    </ScrollView>

</LinearLayout>
